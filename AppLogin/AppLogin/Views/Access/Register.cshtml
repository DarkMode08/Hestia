@model AppLogin.ViewModels._UserViewModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/MacBook.svg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            height: 100vh;
            display: flex;
            align-items: center;
        }
        .card {
            background-color: rgba(255, 255, 255, 0.8);
        }
        .google-btn {
            background-color: white;
            border: 1px solid #ccc;
            color: #555;
            border-radius: 50px; /* Redondear aún más el botón */
        }
        .login-form {
            display: flex;
            justify-content: start;
        }
    </style>
</head>
<body>
    <div class="container d-flex login-form">
        <div class="row w-100">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn google-btn btn-block rounded">
                                <img src="https://img.icons8.com/color/16/000000/google-logo.png" alt="Google logo">
                                Sign in with Google
                            </button>
                        </div>
                        <hr>
                        <form asp-controller="Access" asp-action="Register" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Name or UserName" required asp-for="Name" />
                            <input class="form-control mb-3" type="text" placeholder="Email" required asp-for="Email" />
                            <div class="input-group mb-3">
                                <input class="form-control" type="password" placeholder="Password" required asp-for="Password" />
                            </div>
                            <div class="mb-3">
                                <input class="form-control mb-3" type="password" placeholder="Confirm Password" required asp-for="Confirm_Password" />
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Sign Up</button>
                            </div>
                            @if (ViewData["Message"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Message"]
                                </div>
                            }
                        </form>
                        <div class="text-center">
                            <small class="text-muted">Don't have an account? <a asp-controller="Access" asp-action="Login" class="text-decoration-none">Sign In</a></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
